<div class="container" style="margin-top: ">
    <div class="row">
        <p class="text-end">Hola {{persona}}! <a href="/admin/login/logout" class="btn btn-danger">Cerrar sesión <i class="fas fa-sign-out-alt"></i></a></p>
    </div>

    <div class="row">
        <div class="col-7">
            <h3>Listado de pedidos</h3>
        </div>
        <div class="col-5 text-end">
            <a class="btn btn-success" href="/admin/pedidos/agregar"><i class="fa fa-plus" aria-hidde="true"></i> Nuevo</a>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr class="table-dark">
                        <th class="scope">#</th>
                        <th class="scope">Títulos</th>
                        <th class="scope">Repartidores</th>
                        <th class="text-end">Opciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each pedidos}}
                        <tr>
                            <th scope="row">{{id}}</th>
                            <td>{{orden}}</td>
                            <td>{{{repartidor}}}</td>
                            <td class="text-end">
                                <a class="btn btn-secondary" href="/admin/pedidos/modificar/{{id}}"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                                <a class="btn btn-secondary" href="/admin/pedidos/eliminar/{{id}}"><i class="fa fa-trash" aria-hidden="true"></i></a>
                            </td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>